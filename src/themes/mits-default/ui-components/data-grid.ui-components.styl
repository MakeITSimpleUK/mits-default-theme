/* ==========================================================================
   DATA GRID
   ========================================================================== */



.c-data-grid
  width 100%


  &__th,
  &__td
    padding $unit-2s $unit
    word-break break-word


  &__th
    style-h3()
    margin-bottom 0


  &__td
    border-top .1rem solid $divider-color
    transition $global-duration-out

    &:first-of-type
      border-left-radius($global-radius)

    &:last-of-type
      border-right-radius($global-radius)


  &__tbody

    .c-data-grid__tr
      transition $global-duration-out

      &:hover
        background $card-bg-color
        box-shadow $box-shadow-model-level20 rgba($box-shadow-color-black, .08)
        transition $global-duration-in


        .c-data-grid__td
          border-top-color transparent
          transition $global-duration-in


        & + .c-data-grid__tr

          .c-data-grid__td
            border-top-color transparent
            transition $global-duration-in
          

  .c-badge
    margin-bottom .2rem





/* Clickable
   ========================================================================== */

.c-data-grid--clickable

  .c-data-grid__tbody

    .c-data-grid__tr
      cursor pointer





/* Content Visible on Hover Only
   ========================================================================== */

.c-data-grid

  &__hover-content
    visibility hidden
    opacity 0
    transition $global-duration-out


  &__tr:hover

    .c-data-grid__hover-content
      visibility visible
      opacity 1
      transition $global-duration-in





/* Aligning Variants
   ========================================================================== */

.c-data-grid__tr

  &--align-top

    .c-data-grid__td
      vertical-align top
