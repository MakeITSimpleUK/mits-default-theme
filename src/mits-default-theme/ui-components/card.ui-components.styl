/* ==========================================================================
   CARD
   ========================================================================== */



.c-card
  position relative
  height 100%
  width 100%
  overflow hidden
  border-radius $global-radius
  background $card-bg-color
  box-shadow $box-shadow-model-level10 rgba($box-shadow-color-black, .1)
  

  &__content
    padding $unit $unit-lg


  &__rich-media
    width 100%