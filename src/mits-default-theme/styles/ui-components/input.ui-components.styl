/* ==========================================================================
   PURE INPUT
   ========================================================================== */



.c-pure-input
  width 100%
  height $input-height
  padding 0 $input-padding-h
  border $input-border
  border-radius $input-border-radius
  font-size $input-font-size
  font-weight $input-font-weight
  color $input-color
  background $input-bg-color
  box-shadow $input-box-shadow
  transition-duration $global-duration
  transition-property background, color, border
  
  placeholder($input-placeholder-color, $input-disabled-placeholder-color)
    
  
  /* Add `box-shadow` when input is autofilled by browser to add contrast. */
  &:-webkit-autofill
    box-shadow inset 0 0 0 .1rem rgba(0,0,0, .14)
    
    &:focus
      box-shadow none


  &:focus
    outline none /* Outline is implemented in Form Control. */  
  
  
  &:not([readonly])
    

    &:hover
      style-input-hover()
      
    /*
     * Style `active` also (which looks the same as hover) to avoid flickering
     * during <textarea> resizing.
     */
    &:active
      style-input-active()
      
    &:focus
      background $input-focus-bg-color
  

  &[readonly]
    color $input-readonly-color
  

  &[disabled]
    style-input-disabled()





/* Based on <textarea>
   ========================================================================== */

$input-textarea-padding-h   = $input-padding-h
$input-textarea-padding-v   = .9rem
$input-textarea-line-height = $line-height
$input-textarea-row-height  = $input-font-size * $input-textarea-line-height


/*
 * 1. Make it equal to the height of 3 text rows.
 */
textarea.c-pure-input
  padding $input-textarea-padding-v $input-textarea-padding-h
  min-height $input-textarea-padding-v * 2 + $input-textarea-row-height * 3 /* [1] */
  line-height $input-textarea-line-height